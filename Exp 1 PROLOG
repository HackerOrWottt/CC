Code : 


% Practical 1 - Prolog Program
parent(john, mary).
parent(jane, mary).
parent(john, bob).
parent(jane, bob).
parent(mary, alice).

sibling(X, Y) :-
    parent(Z, X),
    parent(Z, Y),
    X \= Y.

ancestor(X, Y) :-
    parent(X, Y).
ancestor(X, Y) :-
    parent(Z, Y),
    ancestor(X, Z).

child(X, Y) :- parent(Y, X).
